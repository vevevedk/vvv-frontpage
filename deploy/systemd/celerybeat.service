[Unit]
Description=Celery Beat for VEVEVE Django API
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/vvv/vvv-frontpage/backend
Environment="DJANGO_SETTINGS_MODULE=api.settings.prod"
EnvironmentFile=-/etc/vvv/backend.env
ExecStart=/opt/vvv/vvv-frontpage/.venv/bin/celery -A api beat -l info
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target











