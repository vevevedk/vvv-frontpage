# Public URLs
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:8001/api

# Node/Next
NODE_ENV=production

# Prisma/DB (only used by local Next.js API routes if any)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=vvv_database
DB_USER=vvv_user
DB_PASSWORD=vvv_password

# JWT for Next API routes (invites, etc.)
JWT_SECRET=your-jwt-secret-change-this-in-production

# SMTP for invite emails - Update with your actual SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="VEVEVE <noreply@your-domain.com>"

# Backend proxy to Django (for Next API routes)
DJANGO_API_URL=http://localhost:8001/api
