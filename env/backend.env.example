# Django
DJANGO_DEBUG=false
DJANGO_SECRET_KEY=change-me
DJANGO_SETTINGS_MODULE=api.settings.prod
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://api.your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=vvv_database
DB_USER=vvv_user
DB_PASSWORD=vvv_password

# Redis / Celery
REDIS_URL=redis://redis:6379/0

# Email (SMTP)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=change-me

# Note: If proxying API under the same domain (e.g. /api), CORS can remain minimal.
