# Public URLs - Replace with your actual domain
NEXT_PUBLIC_APP_URL=https://veveve.dk
NEXT_PUBLIC_API_URL=https://veveve.dk/api

# Node/Next
NODE_ENV=production

# Prisma/DB
DB_HOST=postgres
DB_PORT=5432
DB_NAME=vvv_database
DB_USER=vvv_user
DB_PASSWORD=CHANGE-THIS-TO-A-SECURE-PASSWORD

# JWT for Next API routes
JWT_SECRET=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-AT-LEAST-32-CHARACTERS-LONG

# SMTP for invite emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="VEVEVE <noreply@veveve.dk>"

# Backend proxy to Django
DJANGO_API_URL=http://backend:8000/api
