# Django
DJANGO_DEBUG=false
DJANGO_SECRET_KEY=your-secret-key-change-this-in-production
DJANGO_SETTINGS_MODULE=api.settings.prod
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com,www.your-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:3001,https://your-domain.com,https://www.your-domain.com
CSRF_TRUSTED_ORIGINS=http://localhost:3001,https://your-domain.com,https://www.your-domain.com

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=vvv_database
DB_USER=vvv_user
DB_PASSWORD=vvv_password

# Redis / Celery
REDIS_URL=redis://redis:6379/0

# Email (SMTP) - Update with your actual SMTP settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false

# Note: If proxying API under the same domain (e.g. /api), CORS can remain minimal.
