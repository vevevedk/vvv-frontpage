# Public URLs
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://api.your-domain.com/api

# Node/Next
NODE_ENV=production

# Prisma/DB (only used by local Next.js API routes if any)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=vvv_database
DB_USER=vvv_user
DB_PASSWORD=vvv_password

# JWT for Next API routes (invites, etc.)
JWT_SECRET=change-me

# SMTP for invite emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=change-me
SMTP_FROM="VEVEVE <noreply@your-domain.com>"

# Backend proxy to Django (for Next API routes)
DJANGO_API_URL=https://api.your-domain.com/api
